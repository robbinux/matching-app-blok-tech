{{> header}}
<div class="profile-container">

  <h1>Edit your Profile</h1>

  {{#each profile}}
  <form class="" name="profileform" action="/profile" method="post">

  <label for="name">Name:</label><br>
  <input type="text" id="name" name="name" placeholder="{{name}}" required><br>

  <label for="age">Age:</label><br>
  <input type="text" id="age" name="age" placeholder="{{age}}" required><br>

  <label for="businessName">Business name:</label><br>
  <input type="text" id="businessName" name="businessName" placeholder="{{businessName}}" required><br>

  <label for="branche">Kies een Branche:</label><br>
  <select id="branche" name="branche" required>
    <option value="{{branche}}">{{branche}}</option>
    <option value="Agrosector">Agrosector</option>
    <option value="Bouwnijverheid">Bouwnijverheid</option>
    <option value="Detailhandel en ambachten">Detailhandel en ambachten</option>
    <option value="Groothandel">Groothandel</option>
    <option value="Horeca, catering, sport en recreati">Horeca, catering, sport en recreatie</option>
    <option value="ICT">ICT</option>
    <option value="Industrie">Industrie</option>
    <option value="Kinderopvang">Kinderopvang</option>
    <option value="Kunst, cultuur, amusement en media">Kunst, cultuur, amusement en media</option>
    <option value="Particulier onderwijs">Particulier onderwijs</option>
    <option value="Vervoer">Vervoer</option>
    <option value="Zakelijke en persoonlijke dienstverlening">Zakelijke en persoonlijke dienstverlening</option>
    <option value="Zorg">Zorg</option>
  </select><br>

  <label for="size">Aantal werknemers:</label><br>
  <select id="size" name="size" required>
    <option value="{{size}}">{{size}}</option>
    <option value="1">1</option>
    <option value="1-3">1-3</option>
    <option value="3-6">3-6</option>
    <option value="6-10">6-10</option>
    <option value="10-15">10-15</option>
    <option value="15-20">15-20</option>
  </select><br>

  <label for="time">Ondernemerservaring (jaren):</label><br>
  <select id="time" name="time" required>
    <option value="{{time}}">{{time}}</option>
    <option value="0-1">0-1</option>
    <option value="1-3">1-3</option>
    <option value="3-6">3-6</option>
    <option value="6-10">6-10</option>
  </select><br>

  <input class="submit" type="submit" value="Bijwerken">
  </form> 
  {{/each}}

  <div class="profilebuttons">
    <a href="/viewprofile" class="viewprofile">view profile</a>
    <a href="/editprofile" class="editprofile">edit profile</a>
  </div>



</div>

<script src="/scripts/profile.js"></script>
{{> footer}}